---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

import Hero from "../components/Landing/Hero.astro";
import About from "../components/Landing/About.astro";
import Events from "../components/Landing/Events.astro";
import Partners from "../components/Landing/Partners.astro";
import Collaboration from "../components/Landing/Collaboration.astro";
import Footer from "../components/Footer.astro";
import { SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={"Home"} description={SITE_DESCRIPTION} />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="text-gray-700 antialiased">
    <Header />
    <main transition:animate="slide">
      <Hero />
      <About />
      <Events />
      <Partners />
      <Collaboration />
      <Footer />
    </main>
  </body>
</html>

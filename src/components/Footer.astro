<script>
  // Get the current year
  const currentYear: number = new Date().getFullYear();

  // Get the upcoming year
  const nextYear: number = currentYear + 1;

  // Update the span elements with the respective years
  document.getElementById("currentYear")!.textContent = currentYear.toString();
  document.getElementById("nextYear")!.textContent = nextYear.toString();
</script>


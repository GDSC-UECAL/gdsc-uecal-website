---
import { Image } from "astro:assets";
import DataCamp from "../../assets/landing/logo_datacamp.png";
import PocketDevs from "../../assets/landing/logo_pocketdevs.webp";

import ACSS from "../../assets/landing/logo_acss.png";
import COESS from "../../assets/landing/logo_coess.png";
import ENSC from "../../assets/landing/logo_ensc.png";
import LITS from "../../assets/landing/logo_lits.png";
import MLSA from "../../assets/landing/logo_mlsa.png";

import Amasing from "../../assets/landing/logo_amasing.jpg";
import Bewitched from "../../assets/landing/logo_bewitched.jpg";
import Klik from "../../assets/landing/logo_klik.jpg";

---

<section class="py-12">
    <div class="px-4 mx-auto text-center md:max-w-screen-md lg:max-w-screen-lg lg:px-36" id="home-partners">

        <h2 class="text-3xl text-gray-600 mb-6 leading-none">
            Brought to you by
        </h2>

        <h1 class="text-center lg:text-center font-bold text-3xl sm:text-4xl leading-none mb-6">
            Partners and Sponsors
        </h1>

        <span class="text-gray-700">
            The organization is also supported by an amazing network of partners and sponsors.
        </span>

        <!-- Longadog Company Text -->
        <div class="flex flex-wrap justify-center items-center mt-16 text-gray-500 sm:justify-between">
            
            <a href="https://www.datacamp.com/" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={DataCamp}
                    alt="Association of Computer Studies Students"
                    class="w-auto h-12 rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />
            </a>

            <a href="https://www.pocketdevs.ph/" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={PocketDevs}
                    alt="Computer Engineering Students Society"
                    class="w-auto h-12 rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />                
            </a>               
        </div>

        <!-- Recognized Student Organization(s) -->
        <div class="flex flex-wrap justify-center items-center mt-16 text-gray-500 sm:justify-between">

            <a href="https://facebook.com/UECENSC" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={ENSC}
                    alt="Office of the UE-Caloocan Engineering Student Council "
                    class="w-auto h-28 rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />
            </a>            
            
            <a href="https://www.facebook.com/UEACSS/" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={ACSS}
                    alt="Association of Computer Studies Students"
                    class="w-auto h-28 rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />
            </a>

            <a href="https://facebook.com/COESSofficial.ue" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={COESS}
                    alt="Computer Engineering Students Society"
                    class="w-auto h-28 rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />                
            </a>
            <a href="https://web.facebook.com/UE.LITS" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={LITS}
                    alt="League of Information Technology Students"
                    class="w-auto h-28 rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />                   
            </a>         

            <a href="#" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={MLSA}
                    alt="League of Information Technology Students"
                    class="w-auto h-32 rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />                   
            </a>             
        </div>

        <!-- Company/Business -->
        <div class="flex flex-wrap justify-center items-center mt-16 text-gray-500 sm:justify-between">
            
            <a href="https://facebook.com/amasingbeautysalon" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={Amasing}
                    alt="Amasing Beauty Salon & Spa"
                    class="w-auto h-32 rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />
            </a>

            <a href="https://facebook.com/klikmediagroup" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={Klik}
                    alt="KLIK Media Group"
                    class="w-auto h-32 shadow-xl rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />                
            </a>
            <a href="https://facebook.com/bewitched.stitchess" class="mr-5 mb-5 lg:mb-0 hover:text-gray-800 dark:hover:text-gray-400">

                <Image
                    src={Bewitched}
                    alt="Bewitched Stitches"
                    class="w-auto h-32 rounded-md transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0"
                />                   
            </a>         
        </div>        

    </div> 
</section>
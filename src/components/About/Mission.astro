---
import { Image } from "astro:assets";
import Divider from "../../assets/divider.svg";
import Aspire from "../../assets/about/aspire.png";
import Build from "../../assets/about/build.png";
import Connect from "../../assets/about/connect.png";
---

<div class="lg:container-fluid lg:mx-auto">
  <Image src={Divider} alt="Divider" class="xl:w-screen" />
</div>

<section
  class="bg-white py-12 px-8 md:px-24 dark:bg-gray-900"
  id="about-mission">
  <div class="mx-auto py-16 sm:py-24 px-8 md:px-24 max-w-7xl">
    <h1 class="text-3xl text-start md:text-5xl font-bold mb-6 text-violet-600">
      Mission
    </h1>

    <p class="text-xl text-start md:text-3xl mb-6 dark:text-gray-400">
      The organization aims to do the ABC:
    </p>

    <div
      class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-3 xl:gap-x-8 content-center items-center">
      <!-- Event 1 -->
      <div class="group relative">
        <div
          class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg lg:aspect-none lg:h-auto">
          <div class="p-5 py-14 items-center content-center text-start">
            <Image
              src={Aspire}
              alt="Divider"
              class="w-6 py-6 h-auto"
              loading="eager"
            />

            <h1 class="text-3xl md:text-3xl mt-6 font-bold mb-6 text-[#F6BC15]">
              Aspire
            </h1>

            <p
              class="text-lg sm:text-xl leading-relaxed mb-4 dark:text-gray-400">
              Individuals to grow with the help of peer-to-peer learning through
              the community.
            </p>
          </div>
        </div>
      </div>

      <!-- Event 2 -->
      <div class="group relative">
        <div
          class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg lg:aspect-none lg:h-auto">
          <div class="p-5 py-14 items-center content-center text-start">
            <Image
              src={Build}
              alt="Divider"
              class="w-8 h-auto py-6"
              loading="eager"
            />

            <h1 class="text-3xl md:text-3xl mt-6 font-bold mb-6 text-[#47A94C]">
              Build
            </h1>

            <p
              class="text-lg sm:text-xl leading-relaxed mb-4 dark:text-gray-400">
              Experience & meaningful technologies to empower communities.
            </p>
          </div>
        </div>
      </div>

      <!-- Event 3 -->
      <div class="group relative">
        <div
          class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg lg:aspect-none lg:h-auto">
          <div class="p-5 py-14 items-center content-center text-start">
            <Image
              src={Connect}
              alt="Divider"
              class="w-10 h-auto py-6"
              loading="eager"
            />

            <h1 class="text-3xl md:text-3xl mt-6 font-bold mb-6 text-[#438ECC]">
              Connect
            </h1>

            <p
              class="text-lg sm:text-xl leading-relaxed mb-4 dark:text-gray-400">
              With people through the community and organizations to grow your
              network.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

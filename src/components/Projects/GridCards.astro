import GDSCWebsite from "./ExistingProjects/GDSCWebsite.astro";
import AccredCerti from "./ExistingProjects/AccredCerti.astro";
import OJTFinder from "./ExistingProjects/OJTFinder.astro";
---

<div class="mx-auto max-w-7xl px-8 md:px-8 pt-24" id="products-projects">
    <h2 class="font-bold text-5xl leading-none sm:text-start mb-6 pt-24">
        Projects
    </h2>
</div>

<div
    class="h-full flex w-full justify-center items-center dark:bg-gray-900 p-2">
    <div
        class="max-w-screen-xl mx-auto px-8 sm:px-8 grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2">
        <GDSCWebsite />
        <AccredCerti />
        <OJTFinder />
    </div>
</div>


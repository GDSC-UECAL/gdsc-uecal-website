---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import FormattedDate from "../FormattedDate.astro";
import Pagination from "../Pagination.astro";

const { page } = Astro.props;
const posts = (await getCollection("events")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const allEvents = posts.slice(1);
const itemsPerPage = 6;
const currentPage = Number(page) || 1;
const maxPages = Math.ceil(allEvents.length / itemsPerPage);
const startIndex = (currentPage - 1) * itemsPerPage;
const endIndex = startIndex + itemsPerPage;
const paginatedEvents = allEvents.slice(startIndex, endIndex);
---

<section class="pb-24 bg-white dark:bg-gray-900">
  <div
    class="flex flex-col mx-auto max-w-7xl p-8 pt-24 justify-center items-center gap-12">
    <h1 class="text-3xl md:text-5xl text-center font-bold dark:text-gray-100">
      All Events
    </h1>
    <Pagination currentPage={currentPage} maxPages={maxPages} />
    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 xl:gap-6">
      {
        paginatedEvents.map((post) => (
          <a href={`/events/${post.slug}/`}>
            <li
              class={`rounded-3xl cursor-pointer group relative  ${post.data.borderColor}`}>
              <Image
                src={post.data.heroImage}
                alt="Blue Pyramid Figure"
                class="h-auto w-full rounded-xl shadow-xl object-center group-hover:opacity-75 lg:h-100"
              />

              <div class="pt-4 flex justify-between">
                <div>
                  <h3 class="text-md font-semibold text-gray-900 dark:text-gray-100">
                    {post.data.title}
                  </h3>
                  <p class="mt-1 text-md text-gray-500">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </div>
              </div>
            </li>
          </a>
        ))
      }
    </ul>
    <Pagination currentPage={currentPage} maxPages={maxPages} />
  </div>
</section>

{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "extends": [
    "./formatter.json",
    "./linter.json",
    "@org/shared-configs/biome"
  ],
  "files": {
    "include": [
      "./src/**/*.js",
      "./src/**/*.ts"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
